<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.*?>

<?import javafx.scene.layout.StackPane?>
<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.LoginController"
            >

    <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                >

        <VBox spacing="24" maxWidth="380" maxHeight="460" styleClass="form-container" alignment="CENTER" fx:id="formContainer">

            <!-- Titre -->
            <Label text="Connexion" styleClass="form-title"/>

            <!-- Email -->
            <TextField fx:id="emailField" promptText="Email"
                       maxWidth="300" styleClass="form-input"/>

            <!-- Mot de passe -->
            <PasswordField fx:id="passwordField" promptText="Mot de passe"
                           maxWidth="300" styleClass="form-input"/>

            <!-- Bouton principal + lien -->
            <VBox spacing="20" alignment="CENTER" styleClass="btn-box">

                <!-- Bouton principal -->
                <Button text="Se connecter" fx:id="loginButton"
                        prefWidth="300" styleClass="form-button"/>

                <HBox alignment="CENTER" spacing="8" maxWidth="300">
                    <Separator HBox.hgrow="ALWAYS"/>
                    <Label text="ou" style="-fx-font-size: 14px; -fx-text-fill: gray"/>
                    <Separator HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Ligne lien vers inscription -->
                <HBox spacing="5" alignment="CENTER">
                    <Label text="Pas encore de compte ?" styleClass="info-label"/>
                    <Button text="S'inscrire" fx:id="goRegisterButton"
                            styleClass="link-button"/>
                </HBox>

            </VBox>

            <!-- Message d'erreur -->
            <Label fx:id="loginMessage" styleClass="error-message"/>

        </VBox>

    </StackPane>


</AnchorPane>

