<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.LoginController"
            stylesheets="@../style/main.css"
            prefWidth="400" prefHeight="300">

    <children>
        <VBox spacing="15" layoutX="50" layoutY="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
            <children>
                <Label text="Connexion" id="titleLabel"/>
                <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
                <PasswordField fx:id="passwordField" promptText="Mot de passe"/>
                <Button fx:id="loginButton" text="Se connecter" onAction="#login" />
                <Label fx:id="statusLabel" text="" id="statusLabel"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
