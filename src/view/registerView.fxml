<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.shape.Line?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.RegisterController"
            prefHeight="500.0" prefWidth="700.0">

    <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
               >

        <VBox spacing="24" maxWidth="380" maxHeight="600" styleClass="form-container" alignment="CENTER" fx:id="formContainer">

            <!-- Titre -->
            <Label text="Inscription" styleClass="form-title"/>

            <!-- Nom complet -->
            <TextField fx:id="fullNameField" promptText="Nom d'utilisateur"
                       maxWidth="300" styleClass="form-input"/>

            <!-- Email -->
            <TextField fx:id="emailField" promptText="Email"
                       maxWidth="300" styleClass="form-input"/>

            <!-- Mot de passe -->
            <PasswordField fx:id="passwordField" promptText="Mot de passe"
                           maxWidth="300" styleClass="form-input"/>

            <!-- Confirmation mot de passe -->
            <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe"
                           maxWidth="300" styleClass="form-input"/>

            <!-- Boutons -->
            <VBox spacing="20" alignment="CENTER" styleClass="btn-box">

                <!-- Bouton d'inscription -->
                <Button text="S'inscrire"
                        fx:id="registerButton"
                        prefWidth="300" styleClass="form-button"
                        onAction="#register"
                />

                <HBox alignment="CENTER" spacing="8" maxWidth="300">
                    <Separator HBox.hgrow="ALWAYS"/>
                    <Label text="ou" style="-fx-font-size: 14px; -fx-text-fill: gray"/>
                    <Separator HBox.hgrow="ALWAYS"/>
                </HBox>

                <!-- Ligne lien vers inscription -->
                <HBox spacing="5" alignment="CENTER">
                    <Label text="Déjà un compte ?" styleClass="info-label"/>
                    <Button text="Se connecter" fx:id="goLoginButton"
                            styleClass="link-button"/>
                </HBox>

            </VBox>


            <!-- Message d'erreur -->
            <Label fx:id="registerMessage" styleClass="error-message"/>
        </VBox>

    </StackPane>
</AnchorPane>
